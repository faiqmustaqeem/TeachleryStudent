<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.codiansoft.teachlerystudent.Activities.SignInActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        />

    <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_below="@+id/logo"
        android:layout_alignStart="@+id/password_layout">

<ImageView
    android:layout_marginTop="8dp"
    android:layout_width="0dp"
    android:layout_height="20dp"
    android:src="@drawable/email"
    android:layout_weight="1"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="Email"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:backgroundTint="#02cdd3"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_below="@id/email_layout">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/key"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="Password"
            android:backgroundTint="#02cdd3"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_blue"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="SIGN IN"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/password_layout"/>

<TextView
    android:id="@+id/tv_forget_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/btn_sign_in"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:textColor="@android:color/white"
    android:clickable="true"
    android:text="Forget Password ?"/>


    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_forget_password"
        android:textColor="#02cdd3"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:text="Click here if you are a new user"/>


   <LinearLayout
       android:id="@+id/divider"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:weightSum="5"
       android:layout_below="@+id/register"
       android:layout_alignStart="@+id/password_layout">

       <View
           android:layout_width="0dp"
           android:layout_marginTop="10dp"
           android:layout_height="1dp"
           android:background="@android:color/white"
           android:layout_weight="2.25"
           ></View>

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:textSize="18sp"
    android:text="or"
    android:textStyle="italic"
    android:gravity="center"
    android:layout_marginBottom="0dp"
    android:textColor="@android:color/white"
    />

       <View
           android:layout_width="0dp"
           android:layout_height="1dp"
           android:layout_marginTop="10dp"
           android:background="@android:color/white"
           android:layout_weight="2.25"
           >


       </View>
   </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:layout_below="@id/divider"
    android:layout_alignParentBottom="true"
    android:weightSum="3"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        >
        <ImageView
            android:id="@+id/facebook_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1.5"
            android:clickable="true"
            android:src="@drawable/facebook_logo"/>

    </LinearLayout>






    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        >
        <ImageView
            android:id="@+id/gmail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1.5"
            android:clickable="true"
            android:src="@drawable/google"/>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>
